{
    "compilerOptions": {
        "target": "es2022",
        "moduleResolution": "nodenext",
        "module": "nodenext",
        "lib": ["ES2022"],
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": true,
        "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "test"]
}
